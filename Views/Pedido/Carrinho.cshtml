@{ 
    ViewData["Title"] = "Carrinho";
}

@model CasaDoCodigo.Models.ViewModels.CarrinhoViewModel
<h3>Meu Carrinho</h3>

<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-md-6">
        Item
      </div>
      <div class="col-md-2 text-center">
        Preço Unit.
      </div>
      <div class="col-md-2 text-center">
        Quantidade
      </div>
      <div class="col-md-2">
        <span class="pull-right">
          Subtotal
        </span>
      </div>
    </div>
  </div>

  <div class="panel-body">

    @foreach (ItemPedido item in Model.Itens)
    {
      <div class="row row_align_center">
        <div class="col-md-3">
          <img src="~/images/Pedido/small_@(item.Id).jpg" />
        </div>
        <div class="col-md-3">@item.Produto.Nome</div>
        <div class="col-md-2 text-center">@item.PrecoUnitario</div>
        <div class="col-md-2 text-center">@item.Quantidade</div>
        <div class="col-md-2">
          <span class="pull-right">R$ @item.Subtotal</span>    
        </div>
    </div>
    }

  </div>

  <div class="panel-footer">
    <div class="row">
      <div class="col-md-10">
        Total: @Model.Itens.Count Itens
      </div>
      <div class="col-md-2">
        <span class="pull-right"> R$ @Model.Total </span>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="pull-right">
      <a asp-action="resumo"
         class="btn btn-success">Finalizar Pedido</a>
    </div>
  </div>
</div>